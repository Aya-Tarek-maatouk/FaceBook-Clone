@model IEnumerable<Facebook.Models.Skill>

@{ int counter = 0;}
<ul class="list-group list-group-flush" id="skillUL">
    @foreach (var item in Model) {
    <li class="list-group-item"><span>@item.skill</span><span>
    @Ajax.ActionLink("Edit", "update_skill", new { id=item.ID }, ajaxOptions: new AjaxOptions { HttpMethod = "Get",OnSuccess = "editeskillfun()", UpdateTargetId = "EditSkillModal", InsertionMode = InsertionMode.Replace }) |
    @Ajax.ActionLink("Delete", "delete_skill", new { id = item.ID },ajaxOptions:new AjaxOptions { HttpMethod = "Post",UpdateTargetId = "SkillDiv" ,InsertionMode=InsertionMode.Replace})

</span>
    </li>
        counter++;

    }

</ul>
<!--Edit Skill-->

<div class="modal" tabindex="-1" id="EditSkillMainModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Skill</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="EditSkillModal">
              
            </div>
          
        </div>
    </div>
</div>